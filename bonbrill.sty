%%%% CHANGELOG
%% Version 1.0
% Reduce old mb.sty to the neccessary and sane style adaptions as Manfred Brill
% wants them.
% The palatino package is replaced by a more modern approach using three
% different font packages to achieve the exact same, except that the sans-font
% is no scaled properly and the corresponding mathfonts are loaded.
% There is a first package option: nocustomfont
% nocustomfont suppresses loading said fonts.

\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\def\bon@brillsty@version{1.0}
\ProvidesPackage{bonbrill}%
  [2017/07/14 bonbrill v\bon@brillsty@version]

\newif\if@bon@brill@customfont
\@bon@brill@customfonttrue
\DeclareOption{nocustomfont}{
  \@bon@brill@customfontfalse
}

\ProcessOptions\relax

\if@bon@brill@customfont
  \RequirePackage{mathpazo}
  \RequirePackage[scaled=.95]{helvet}
  \RequirePackage{courier}
\fi

\RequirePackage{caption}
\RequirePackage{xcolor}
\RequirePackage{amssymb}
\RequirePackage{scrlayer-scrpage}

\renewcommand{\captionfont}{\small}
\renewcommand{\captionlabelfont}{\small \bfseries}
\setlength\abovecaptionskip          {0.4em}
\setlength\belowcaptionskip          {0.2em}

\setcounter{secnumdepth}{2}
\setcounter{tocdepth}{2}

\renewcommand{\chaptermark}[1]{\markboth{#1}{}}
\renewcommand{\sectionmark}[1]{\markright{#1}}

\ohead[]{\normalfont \small \thepage}
\lohead[]{\normalfont \small \leftmark}
\rehead[]{\normalfont \small \rightmark}
\chead[]{}
\cfoot[]{}

\newlength{\Blen}
\settoheight{\Blen}{$\Box$}
\renewcommand{\labelitemi}{\textcolor[gray]{0.5}%
{\rule{\Blen}{\Blen}}}
\setlength\leftmargini                 {1.5em}
\setlength\leftmarginii                {1.75em}
\setlength\leftmarginiii               {1.5em}
\setlength\leftmarginiv                {1.25em}
\setlength\leftmarginv                 {1em}
\setlength\leftmarginvi                {1em}
\setlength\labelsep                    {0.5em}
\setlength\labelwidth                  {\leftmargini}
\addtolength\labelwidth                {-\labelsep}
\setlength\topsep                      {0.0ex}
\setlength\itemsep                     {2pt plus1pt minus1pt}
\setlength\parsep                      {1pt plus1pt}
